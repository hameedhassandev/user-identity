@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table table-striped mt-3">
    <thead>
        <tr class="bg-success text-white">
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th> Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@string.Join(" , ",user.Roles.ToList())</td>
            <td>
                <a class="btn btn-success" asp-controller="Users" asp-action="ManageRole" asp-route-userid="@user.Id">Manage User</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

